
JobDefs {
  Name = "DefaultJobDiario"
  Type = Backup
  Level = Incremental
  Client = bacula-fd
  FileSet = "Full Set"
  Schedule = "Diario"
  Storage = File1
  Messages = Standard
  Pool = PoolDiario
  SpoolAttributes = yes
  Priority = 10 #1 - 11
  Write Bootstrap = "/var/spool/bacula/%c.bsr"
}
JobDefs {
  Name = "DefaultJobMensal"
  Type = Backup
  Level = Incremental
  Client = bacula-fd
  FileSet = "Full Set"
  Schedule = "Mensal"
  Storage = File1
  Messages = Standard
  Pool = PoolMensal
  SpoolAttributes = yes
  Priority = 10 #1 - 11
  Write Bootstrap = "/var/spool/bacula/%c.bsr"
}
Job {
  Name = "RestoreLocalFiles"
  Type = Restore
  Client=bacula-fd
  FileSet="Full Set"
  Storage = File1
  Pool = File
  Messages = Standard
  Where = /bacula/restore
}


Job {
  Name = "BackupLocalFilesDiario"
  JobDefs = "DefaultJobDiario"
}
Job {
  Name = "BackupGmailDiario"
  JobDefs = "DefaultJobDiario"
  FileSet = "baculaGmail-fs"
  RunBeforeJob = "sudo gmvault sync -d /mail/bacula bacula@eftech.com.br"
  RunAfterJob = "sudo rm -rf /mail/bacula"
}
Job {
  Name = "BackupWindowsMensal"
  JobDefs = "DefaultJobMensal"
  Client = "windows-fd"
  Fileset = "windows-fs"
}
Job {
  Name = "BackupGmailMensal"
  JobDefs = "DefaultJobMensal"
  FileSet = "baculaGmail-fs"
  RunBeforeJob = "sudo gmvault sync -d /mail/bacula bacula@eftech.com.br"
  RunAfterJob = "sudo rm -rf /mail/bacula"
}
Job {
  Name = "RestoreGMAIL"
  Type = Restore
  Client=bacula-fd
  FileSet="baculaGmail-fs"
  Storage = File1
  Pool = File
  Messages = Standard
  Where = /
  Bootstrap = "/var/spool/bacula/%c.bsr"
  RunBeforeJob = "sudo rm -rf /mail/bacula/*"
  RunAfterJob = "sudo gmvault restore -d /mail/bacula --type quick bacula@eftech.com.br"
}
